extends ../layout

block content
	.container
		.row
			form.form-horizontal.col(method="post", action="/admin/movie")
				.form-group.row
					label.col-sm-2.col-form-label.text-right(for="inputTitle") 电影名字
					.col-sm-10
						input#inputTitle.form-control(type="text", name="movie[title]", value="#{movie.title}")
				.form-group.row
					label.col-sm-2.control-label.text-right(for="inputDoctor") 电影导演
					.col-sm-10
						input#inputDoctor.form-control(type="text", name="movie[doctor]", value="#{movie.doctor}")
				.form-group.row
					label.col-sm-2.control-label.text-right(for="inputCountry") 国家
					.col-sm-10
						input#inputCountry.form-control(type="text", name="movie[country]", value="#{movie.country}")
				.form-group.row
					label.col-sm-2.control-label.text-right(for="inputLanguage") 语种
					.col-sm-10
						input#inputLanguage.form-control(type="text", name="movie[language]", value="#{movie.language}")
				.form-group.row
					label.col-sm-2.control-label.text-right(for="inputPoster") 海报地址
					.col-sm-10
						input#inputPoster.form-control(type="text", name="movie[poster]", value="#{movie.poster}")
				.form-group.row
					label.col-sm-2.control-label.text-right(for="inputFlash") 片源地址
					.col-sm-10
						input#inputFlash.form-control(type="text", name="movie[flash]", value="#{movie.flash}")
				.form-group.row
					label.col-sm-2.control-label.text-right(for="inputYear") 上映年代
					.col-sm-10
						input#inputYear.form-control(type="text", name="movie[year]", value="#{movie.year}")
				.form-group.row
					label.col-sm-2.control-label.text-right(for="inputSummary") 电影简介
					.col-sm-10
						input#inputSummary.form-control(type="text", name="movie[summary]", value="#{movie.summary}")
				.form-group.row
					.col-sm-offset-2.col-sm-5
					button.btn.btn-default(type="submit") 录入