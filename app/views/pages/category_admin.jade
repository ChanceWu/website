extends ../layout

block content
	.container
		.row
			form.form-horizontal.col(method="post", action="/admin/category")
				.form-group.row
					label.col-sm-2.col-form-label.text-right(for="inputCategory") 电影分类
					.col-sm-10
						input#inputCategory.form-control(type="text", name="category[name]", value=category.name)
				.form-group.row
					.col-sm-offset-2.col-sm-5
					button.btn.btn-default(type="submit") 录入